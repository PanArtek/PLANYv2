---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/layout/Navigation.astro';
import Portfolio from '../components/sections/Portfolio.astro';
import Footer from '../components/layout/Footer.astro';
---

<Layout 
  title="Projekty - PLANY"
  description="Zobacz nasze zrealizowane projekty architektoniczne i planistyczne. Kompleksowe rozwiązania od koncepcji po realizację."
>
  <Navigation />
  
  <main class="pt-20">
    <!-- Hero Section for Projects Page -->
    <section class="bg-gradient-to-br from-slate-50 to-blue-50 py-16">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-slate-800 mb-6">
          Nasze Projekty
        </h1>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Odkryj portfolio naszych najlepszych realizacji. Każdy projekt to unikalne rozwiązanie 
          dostosowane do indywidualnych potrzeb klienta.
        </p>
      </div>
    </section>

    <!-- Portfolio Grid -->
    <Portfolio />
  </main>

  <Footer />
</Layout>