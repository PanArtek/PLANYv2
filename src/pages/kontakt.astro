---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/layout/Navigation.astro';
import Contact from '../components/sections/Contact.astro';
import Footer from '../components/layout/Footer.astro';
---

<Layout 
  title="Kontakt - PLANY"
  description="Skontaktuj się z nami. Otrzymaj bezpłatną wycenę swojego projektu architektonicznego."
>
  <Navigation />
  
  <main class="pt-20">
    <!-- Hero Section for Contact Page -->
    <section class="bg-gradient-to-br from-slate-50 to-blue-50 py-16">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-slate-800 mb-6">
          Skontaktuj się z nami
        </h1>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Masz projekt do zrealizowania? Chcesz dowiedzieć się więcej o naszych usługach? 
          Napisz do nas lub zadzwoń.
        </p>
      </div>
    </section>

    <!-- Contact Form -->
    <Contact />
  </main>

  <Footer />
</Layout>