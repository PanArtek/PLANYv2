---
const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: "Facebook",
    href: "#",
    icon: "M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"
  },
  {
    name: "Instagram", 
    href: "#",
    icon: "M16 8a6 6 0 016 6v7a1 1 0 01-1 1H3a1 1 0 01-1-1v-7a6 6 0 016-6h8zM16 4a2 2 0 012 2v12a2 2 0 01-2 2H8a2 2 0 01-2-2V6a2 2 0 012-2h8zm-4 6a2 2 0 100 4 2 2 0 000-4zm4.5-1.5a.5.5 0 100-1 .5.5 0 000 1z"
  },
  {
    name: "LinkedIn",
    href: "#", 
    icon: "M16 8a6 6 0 016 6v7a1 1 0 01-1 1H3a1 1 0 01-1-1v-7a6 6 0 016-6h8zM2 9h4v12H2V9zm2-4a2 2 0 110 4 2 2 0 010-4zm4 4h4v1.5c.5-1 2-2.5 4-2.5 3 0 5 2 5 6V21h-4v-6.5c0-1.5-1-2.5-2.5-2.5S12 12.5 12 14V21H8V9z"
  }
];

const quickLinks = [
  { href: "/", label: "Strona główna" },
  { href: "/o-nas", label: "O nas" },
  { href: "/realizacje", label: "Realizacje" },
  { href: "/uslugi", label: "Usługi" },
  { href: "/kontakt", label: "Kontakt" }
];

const services = [
  { href: "/uslugi/biura", label: "Aranżacja biur" },
  { href: "/uslugi/sklepy", label: "Przestrzenie handlowe" },
  { href: "/uslugi/restauracje", label: "Lokale gastronomiczne" },
  { href: "/uslugi/hotele", label: "Obiekty hotelowe" }
];
---

<footer class="bg-surface border-t border-border">
  <div class="max-w-6xl mx-auto px-4 py-12 md:px-8">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      
      <!-- Company Info -->
      <div class="reveal-up">
        <div class="flex items-center space-x-2 mb-4">
          <div class="h-8 w-8 rounded-lg bg-gradient-to-br from-primary to-accent"></div>
          <span class="font-poppins text-xl font-bold text-text">FitOut</span>
        </div>
        <p class="text-text/70 mb-6 leading-relaxed">
          Tworzymy nowoczesne przestrzenie, które inspirują i zwiększają produktywność. 
          Specjalizujemy się w kompleksowych projektach fit-out.
        </p>
        
        <!-- Contact Info -->
        <div class="space-y-3">
          <div class="flex items-center space-x-3">
            <svg class="h-5 w-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span class="text-text/70">+48 123 456 789</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="h-5 w-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span class="text-text/70">kontakt@fitout.pl</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="h-5 w-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span class="text-text/70">Warszawa, Mokotów</span>
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="reveal-up">
        <h3 class="font-semibold text-text mb-4">Nawigacja</h3>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a href={link.href} class="text-text/70 hover:text-accent transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div class="reveal-up">
        <h3 class="font-semibold text-text mb-4">Usługi</h3>
        <ul class="space-y-3">
          {services.map((service) => (
            <li>
              <a href={service.href} class="text-text/70 hover:text-accent transition-colors">
                {service.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Newsletter & Social -->
      <div class="reveal-up">
        <h3 class="font-semibold text-text mb-4">Bądź w kontakcie</h3>
        <p class="text-text/70 mb-4 text-sm">
          Zapisz się do newslettera i bądź na bieżąco z naszymi realizacjami.
        </p>
        
        <!-- Newsletter Form -->
        <form class="mb-6">
          <div class="flex">
            <input 
              type="email" 
              placeholder="Twój email"
              class="flex-1 px-3 py-2 bg-bg border border-border rounded-l-lg text-sm focus:outline-none focus:ring-2 focus:ring-accent transition-colors"
            />
            <button 
              type="submit"
              class="px-4 py-2 bg-accent text-bg rounded-r-lg hover:bg-accent/90 transition-colors text-sm font-medium"
            >
              Zapisz
            </button>
          </div>
        </form>

        <!-- Social Media -->
        <div class="flex space-x-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              class="p-2 rounded-lg bg-surface hover:bg-accent hover:text-bg transition-colors group"
              aria-label={social.name}
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d={social.icon}></path>
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Bottom Footer -->
    <div class="border-t border-border pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="text-text/70 text-sm">
          © {currentYear} FitOut. Wszystkie prawa zastrzeżone.
        </div>
        <div class="flex space-x-6 text-sm">
          <a href="/polityka-prywatnosci" class="text-text/70 hover:text-accent transition-colors">
            Polityka prywatności
          </a>
          <a href="/regulamin" class="text-text/70 hover:text-accent transition-colors">
            Regulamin
          </a>
          <a href="/cookie" class="text-text/70 hover:text-accent transition-colors">
            Cookies
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  // Newsletter form handling
  const newsletterForm = document.querySelector('footer form');
  
  newsletterForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    const emailInput = newsletterForm.querySelector('input[type="email"]') as HTMLInputElement;
    const email = emailInput.value;
    
    if (email) {
      // Here you would typically send the email to your backend
      console.log('Newsletter signup:', email);
      
      // Show success message
      const button = newsletterForm.querySelector('button');
      const originalText = button?.textContent;
      if (button) {
        button.textContent = 'Zapisano!';
        button.style.backgroundColor = '#10b981';
        
        setTimeout(() => {
          button.textContent = originalText;
          button.style.backgroundColor = '';
          emailInput.value = '';
        }, 2000);
      }
    }
  });
</script>