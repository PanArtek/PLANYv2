<!-- PRD Footer Geometric Styling -->
<style>
  /* Footer link hover effects with geometric accents */
  .footer-link:hover {
    color: var(--primary-light) !important;
    transform: translateX(4px);
  }
  
  /* Geometric shape hover animations */
  .footer-shape {
    transition: all 0.3s var(--ease-out);
  }
  
  .footer-shape:hover {
    transform: scale(1.2) rotate(15deg);
    filter: brightness(1.2);
  }
  
  /* Mobile responsive adjustments */
  @media (max-width: 768px) {
    .footer-container {
      padding: 3rem 1rem;
    }
    
    .footer-logo h3 {
      font-size: 1.5rem !important;
    }
    
    .footer-shapes {
      justify-content: center;
    }
  }
  
  /* Enhanced focus states for accessibility */
  .footer-link:focus {
    outline: 2px solid var(--primary-light);
    outline-offset: 2px;
    border-radius: 4px;
  }
  
  /* Geometric shape definitions for footer */
  .footer-section .geometric-triangle {
    clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
  }
  
  .footer-section .geometric-circle {
    border-radius: 50%;
  }
  
  .footer-section .geometric-square {
    clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
  }
  
  .footer-section .geometric-hexagon {
    clip-path: polygon(30% 0%, 70% 0%, 100% 50%, 70% 100%, 30% 100%, 0% 50%);
  }
</style>