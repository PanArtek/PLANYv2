---
import Card from '../ui/Card.astro';
import Icon from '../ui/Icon.astro';
import GeometricIcon from '../ui/GeometricIcon.astro';
import { SERVICES } from '../../utils/constants';
---

<section class="services-geometric py-20" id="uslugi" style="background: linear-gradient(180deg, #FEFCF3 0%, #F5F1EB 100%);">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header - Geometric Style -->
    <div class="services-header text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-bold mb-6" style="color: #87A96B;">
        Nasze <span style="background: linear-gradient(135deg, #B4A7D6 0%, #E76F51 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Specjalizacje</span>
      </h2>
      <p class="text-xl max-w-3xl mx-auto leading-relaxed" style="color: #87A96B;">
        Własny zespół wszystkich branż eliminuje chaos koordynacji. Jeden telefon zamiast dziesięciu. 
        17 lat doświadczenia w Waszej branży - znamy co może pójść nie tak.
      </p>
    </div>

    <!-- Modern Organic Services Grid -->
    <div class="services-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {SERVICES.map((service, index) => {
        // Modern Organic Service Mapping with 2025 Colors
        const organicServiceMapping = {
          'medical': { gradient: 'from-coral-400 to-coral-600', accent: 'coral-300', shape: 'organic-blob' },
          'education': { gradient: 'from-primary-400 to-primary-600', accent: 'primary-300', shape: 'organic-flow' },
          'office': { gradient: 'from-lavender-400 to-lavender-600', accent: 'lavender-300', shape: 'organic-wave' },
          'retail': { gradient: 'from-gold-400 to-gold-600', accent: 'gold-300', shape: 'organic-fluid' },
          'installations': { gradient: 'from-sage-400 to-sage-600', accent: 'sage-300', shape: 'organic-cloud' },
          'turnkey': { gradient: 'from-neutral-400 to-neutral-600', accent: 'neutral-300', shape: 'organic-pebble' }
        };
        
        const mapping = organicServiceMapping[service.id] || organicServiceMapping['medical'];
        const serviceClass = `service-organic service-${service.id}`;
        
        return (
        <div 
          class={`${serviceClass} card-service group transform transition-all duration-600 hover:scale-105`}
          data-service-id={service.id}
        >
          <!-- Organic Icon Container with Abstract Shape -->
          <div class="service-icon-organic mb-6 relative">
            <div class={`organic-shape ${mapping.shape} w-20 h-20 mx-auto bg-gradient-to-br ${mapping.gradient} flex items-center justify-center relative overflow-hidden`}>
              <!-- Service Icon -->
              <Icon 
                name={service.icon}
                class="w-10 h-10 text-white relative z-10"
              />
              
              <!-- Organic accent dot -->
              <div class={`absolute -top-2 -right-2 w-6 h-6 bg-${mapping.accent} rounded-full animate-pulse-organic opacity-70`}></div>
              
              <!-- Abstract flow element -->
              <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-transparent animate-flow opacity-50"></div>
            </div>
          </div>

          <!-- Service Content with Organic Flow -->
          <div class="service-content relative">
            <h3 class="text-xl font-bold mb-4 text-primary-700 group-hover:text-coral-500 transition-colors duration-300">
              {service.title}
            </h3>
            
            <!-- Text with organic shape accent -->
            <div class="relative">
              <div class={`absolute -left-4 top-2 w-3 h-3 bg-${mapping.accent} rounded-full opacity-40 animate-float`}></div>
              <p class="mb-6 text-neutral-600 leading-relaxed">
                {service.description}
              </p>
            </div>

            <!-- Service Features with Organic Checkmarks -->
            <ul class="space-y-3 mb-8">
              {service.features.map((feature, featureIndex) => (
                <li class="flex items-start gap-3 text-sm text-neutral-600">
                  <div class={`organic-shape organic-blob w-5 h-5 bg-gradient-to-br ${mapping.gradient} flex items-center justify-center flex-shrink-0 mt-0.5`}>
                    <Icon 
                      name="Check" 
                      class="w-3 h-3 text-white"
                    />
                  </div>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>

            <!-- Organic CTA Button -->
            <div class="relative">
              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-neutral-100 to-transparent h-px top-0"></div>
              
              <button 
                class="service-cta-organic pt-6 font-medium text-sm text-primary-600 hover:text-coral-500 transition-all duration-300 flex items-center gap-2 group/cta"
                data-service={service.id}
              >
                Dowiedz się więcej
                <div class={`w-4 h-4 bg-${mapping.accent} rounded-full flex items-center justify-center group-hover/cta:scale-110 transition-transform duration-300`}>
                  <Icon 
                    name="ArrowRight" 
                    class="w-2 h-2 text-white transform group-hover/cta:translate-x-0.5 transition-transform duration-300" 
                  />
                </div>
              </button>
            </div>
          </div>
        </div>
      )})}
    </div>
    </div>

    <!-- Modern Organic CTA Section -->
    <div class="services-cta-organic text-center mt-20 relative">
      <!-- Organic background container -->
      <div class="relative bg-gradient-to-br from-primary-50 via-neutral-50 to-coral-50 rounded-organic-2xl p-12 mx-4">
        <!-- Abstract organic accents -->
        <div class="absolute top-8 left-8 w-16 h-16 bg-lavender-200 opacity-20 rounded-full blur-md animate-pulse-organic"></div>
        <div class="absolute bottom-8 right-8 w-12 h-12 bg-coral-200 opacity-30 rounded-full animate-organic"></div>
        
        <div class="max-w-3xl mx-auto relative z-10">
          <h3 class="text-3xl font-bold mb-6 text-primary-700">
            Potrzebujesz rozwiązania <span class="text-coral-500">na miarę</span>?
          </h3>
          
          <!-- Text with organic flow accents -->
          <div class="relative mb-8">
            <div class="absolute -left-8 top-4 w-4 h-4 bg-gold-300 opacity-40 rounded-full animate-float"></div>
            <p class="text-lg text-neutral-600 leading-relaxed">
              Każdy projekt jest unikalny. Skontaktuj się z nami, aby omówić Twoje potrzeby 
              i otrzymać <span class="text-primary-600 font-semibold">spersonalizowaną wycenę</span>.
            </p>
            <div class="absolute -right-6 bottom-2 w-3 h-3 bg-lavender-300 opacity-50 rounded-full animate-flow"></div>
          </div>
          
          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
            <a 
              href="#kontakt"
              class="btn-primary-hero shadow-organic hover:shadow-coral transition-all duration-500"
            >
              <Icon name="Calculator" class="w-5 h-5 mr-2" />
              Poproś o wycenę
            </a>
            <a 
              href="tel:+48123456789"
              class="btn-secondary-hero glass-premium transition-all duration-500"
            >
              <Icon name="Phone" class="w-5 h-5 mr-2" />
              Zadzwoń teraz
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Modern Organic Service Modal -->
<div id="serviceModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 hidden items-center justify-center p-4">
  <div class="bg-white rounded-organic-xl max-w-3xl w-full max-h-[90vh] overflow-y-auto shadow-premium">
    <div id="serviceModalContent" class="p-8 relative">
      <!-- Modal content will be populated by JavaScript -->
      <!-- Organic close button -->
      <button class="absolute top-6 right-6 w-10 h-10 bg-neutral-100 hover:bg-coral-100 rounded-full flex items-center justify-center transition-colors duration-300" onclick="closeServiceModal()">
        <Icon name="X" class="w-5 h-5 text-neutral-600" />
      </button>
    </div>
  </div>
</div>

<style>
  /* Modern Organic Services Section */
  .services-organic {
    position: relative;
  }

  .service-organic {
    transition: all 0.6s var(--ease-organic);
  }

  /* Organic service card effects */
  .service-organic:hover .organic-shape {
    transform: scale(1.1) rotate(8deg);
  }

  /* Service-specific organic morphing */
  .service-medical:hover .organic-blob {
    border-radius: 40% 60% 70% 30% / 50% 60% 40% 50%;
  }

  .service-education:hover .organic-flow {
    border-radius: 30% 70% 40% 60% / 60% 40% 80% 20%;
  }

  .service-office:hover .organic-wave {
    border-radius: 70% 30% 30% 70% / 70% 70% 30% 30%;
  }

  .service-retail:hover .organic-fluid {
    border-radius: 20% 60% 50% 80% / 70% 50% 30% 70%;
  }

  .service-installations:hover .organic-cloud {
    border-radius: 60% 40% 40% 60% / 40% 60% 60% 40%;
  }

  .service-turnkey:hover .organic-pebble {
    border-radius: 50% 50% 70% 30% / 60% 40% 60% 40%;
  }

  /* Modern CTA section styling */
  .services-cta-organic:hover .organic-decoration {
    transform: scale(1.2) rotate(10deg);
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .services-organic .organic-decoration {
      opacity: 0.1 !important;
      animation: none;
    }
    
    .service-organic {
      padding: 1.5rem;
    }
    
    .services-cta-organic {
      padding: 2rem 1rem;
    }
  }


  /* Geometric Service Cards */
  .card-service-geometric {
    background: var(--white);
    border: 1px solid var(--neutral-light);
    padding: 32px;
    position: relative;
    transition: all 0.4s var(--ease-out);
  }

  .card-service-geometric::before {
    content: '';
    position: absolute;
    top: 20px;
    right: 20px;
    width: 40px;
    height: 40px;
    background: var(--primary-light);
    clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
    transition: all 0.3s var(--ease-out);
  }

  .card-service-geometric:hover {
    transform: translateY(var(--geometric-hover-lift));
    box-shadow: var(--geometric-shadow);
  }

  .card-service-geometric:hover::before {
    background: var(--accent-orange);
    transform: rotate(120deg);
  }

  /* Geometric Shape Icons */
  .service-icon-geometric {
    position: relative;
  }

  .service-icon-geometric .geometric-icon-container {
    transition: all 0.3s var(--ease-out);
  }

  .card-service-geometric:hover .geometric-icon-container.geometric-triangle {
    transform: rotate(120deg) scale(1.1);
  }

  .card-service-geometric:hover .geometric-icon-container.geometric-hexagon {
    transform: rotate(60deg) scale(1.1);
  }

  .card-service-geometric:hover .geometric-icon-container.geometric-diamond {
    transform: rotate(45deg) scale(1.1);
  }

  .card-service-geometric:hover .geometric-icon-container.geometric-circle {
    transform: scale(1.1);
  }

  .card-service-geometric:hover .geometric-icon-container.geometric-pentagon {
    transform: rotate(72deg) scale(1.1);
  }

  .card-service-geometric:hover .geometric-icon-container.geometric-square {
    transform: rotate(45deg) scale(1.1);
  }

  /* Geometric CTA Button */
  .service-cta-geometric:hover {
    color: var(--accent-orange) !important;
  }

  /* Service features animation */
  .service-content ul li {
    animation: slideInLeft 0.5s ease-out both;
  }

  .service-content ul li:nth-child(1) { animation-delay: 0.1s; }
  .service-content ul li:nth-child(2) { animation-delay: 0.2s; }
  .service-content ul li:nth-child(3) { animation-delay: 0.3s; }
  .service-content ul li:nth-child(4) { animation-delay: 0.4s; }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .card-service-geometric {
      padding: 24px;
    }
    
    .card-service-geometric::before {
      width: 30px;
      height: 30px;
      top: 15px;
      right: 15px;
    }
  }

  /* Reduced motion fallback */
  @media (prefers-reduced-motion: reduce) {
    .service-item-geometric,
    .card-service-geometric,
    .geometric-icon-container,
    .service-cta-geometric {
      transition: none !important;
      transform: none !important;
      animation: none !important;
    }
    
    .service-item-geometric {
      opacity: 1 !important;
    }

    .service-content ul li {
      animation: none !important;
    }

    .card-service-geometric:hover .geometric-icon-container {
      transform: none !important;
    }
  }
</style>

<script type="module">
  function initOrganicServicesAnimations() {
    if (!window.gsap || !window.ScrollTrigger) {
      // Fallback: show elements immediately
      document.querySelectorAll('.service-organic, .services-cta-organic').forEach(el => {
        if (el) {
          el.style.opacity = '1';
          el.style.transform = 'translateY(0) scale(1)';
        }
      });
      return;
    }
    
    gsap.registerPlugin(ScrollTrigger);
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    
    if (prefersReducedMotion) {
      gsap.set('.service-organic, .services-cta-organic, .organic-decoration', { 
        opacity: 1, y: 0, scale: 1, rotation: 0 
      });
      return;
    }

    // Animate organic services header
    gsap.fromTo('.services-header', 
      { opacity: 0, y: 30, scale: 0.95 },
      {
        opacity: 1,
        y: 0,
        scale: 1,
        duration: 1,
        ease: 'power3.out',
        scrollTrigger: {
          trigger: '.services-header',
          start: 'top 80%'
        }
      }
    );

    // Animate organic service cards with stagger
    gsap.fromTo('.service-organic',
      { opacity: 0, y: 50, scale: 0.9, rotation: -3 },
      {
        opacity: 1,
        y: 0,
        scale: 1,
        rotation: 0,
        duration: 0.8,
        stagger: {
          amount: 0.6,
          from: 'start'
        },
        ease: 'back.out(1.1)',
        scrollTrigger: {
          trigger: '.services-grid',
          start: 'top 70%'
        }
      }
    );

    // Animate organic shapes with morphing effect
    gsap.fromTo('.service-organic .organic-shape',
      { opacity: 0, scale: 0.7, rotation: -20 },
      {
        opacity: 1,
        scale: 1,
        rotation: 0,
        duration: 0.9,
        stagger: 0.1,
        ease: 'back.out(1.4)',
        scrollTrigger: {
          trigger: '.services-grid',
          start: 'top 65%'
        }
      }
    );

    // Animate CTA section with organic flow
    gsap.fromTo('.services-cta-organic',
      { opacity: 0, y: 40, scale: 0.95 },
      {
        opacity: 1,
        y: 0,
        scale: 1,
        duration: 0.8,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '.services-cta-organic',
          start: 'top 80%'
        }
      }
    );

    // Organic decorations animation
    gsap.fromTo('.services-organic .organic-decoration',
      { opacity: 0, scale: 0.5, rotation: -30 },
      {
        opacity: 1,
        scale: 1,
        rotation: 0,
        duration: 1.2,
        stagger: 0.3,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '.services-organic',
          start: 'top 85%'
        }
      }
    );
  }

  function initServiceModal() {
    const serviceCTAs = document.querySelectorAll('.service-cta-organic');
    const modal = document.getElementById('serviceModal');
    const modalContent = document.getElementById('serviceModalContent');

    if (!modal || !modalContent) return;

    // Service details data
    const serviceDetails = {
      medical: {
        title: 'Placówki Medyczne',
        description: 'Specjalizujemy się w wykończeniach placówek medycznych zgodnych z najwyższymi standardami sanitarnymi i bezpieczeństwa.',
        details: [
          'Compliance z wymogami sanitarnymi i normami medycznymi',
          'Materiały antybakteryjne i łatwe w dezynfekcji',
          'Systemy wentylacji z filtracją HEPA',
          'Specjalistyczne instalacje medyczne',
          'Projektowanie stref czystych i brudnych',
          'Systemy sygnalizacji i komunikacji'
        ],
        projects: ['Klinika Stomatologiczna - Warszawa', 'Przychodnia Lekarska - Poznań', 'Centrum Fizjoterapii - Szczecin']
      },
      education: {
        title: 'Instytucje Edukacyjne',
        description: 'Tworzymy inspirujące przestrzenie edukacyjne, które wspierają proces nauki i rozwoju.',
        details: [
          'Bezpieczne materiały dla dzieci i młodzieży',
          'Akustyka sal lekcyjnych i audytoriów',
          'Ergonomiczne rozwiązania dla różnych grup wiekowych',
          'Kolorystyka wspierająca koncentrację i naukę',
          'Systemy audiowizualne i interaktywne',
          'Przestrzenie rekreacyjne i odpoczynku'
        ],
        projects: ['Szkoła Podstawowa - Kraków', 'Aula Uniwersytecka - Łódź']
      },
      office: {
        title: 'Przestrzenie Biurowe',
        description: 'Projektujemy nowoczesne biura, które zwiększają produktywność i wspierają well-being pracowników.',
        details: [
          'Open space i elastyczne strefy pracy',
          'Sale konferencyjne z systemami AV',
          'Ergonomiczne stanowiska pracy',
          'Systemy klimatyzacji i wentylacji',
          'Rozwiązania smart office i automatyka',
          'Strefy relaksu i przestrzenie socjalne'
        ],
        projects: ['Biuro IT - Wrocław', 'Przestrzeń Coworking - Katowice']
      },
      retail: {
        title: 'Lokale Handlowe',
        description: 'Atrakcyjne przestrzenie handlowe, które zwiększają sprzedaż i poprawiają doświadczenie klientów.',
        details: [
          'Strategiczny layout sklepu i customer journey',
          'Systemy oświetlenia produktów i ekspozycji',
          'Materiały o wysokiej trwałości i łatwej konserwacji',
          'Rozwiązania digital signage i multimedia',
          'Systemy bezpieczeństwa i monitoring',
          'Strefy kas i obsługi klienta'
        ],
        projects: ['Butik Modowy - Gdańsk', 'Salon Optyczny - Lublin']
      },
      installations: {
        title: 'Instalacje Techniczne',
        description: 'Kompleksowe instalacje techniczne zapewniające bezpieczeństwo i komfort użytkowania.',
        details: [
          'Instalacje elektryczne i teleinformatyczne',
          'Systemy HVAC i klimatyzacja',
          'Instalacje wodno-kanalizacyjne',
          'Systemy bezpieczeństwa i monitoring',
          'Instalacje gazowe i sprężonego powietrza',
          'Systemy przeciwpożarowe'
        ],
        projects: ['Dostępne we wszystkich realizacjach']
      },
      turnkey: {
        title: 'Projekty Kompleksowe',
        description: 'Realizacje "pod klucz" od projektu przez realizację po odbiór końcowy i serwis.',
        details: [
          'Projekt i wizualizacje 3D',
          'Zarządzanie całym procesem inwestycji',
          'Własny zespół realizacyjny',
          'Koordynacja z innymi wykonawcami',
          'Kontrola jakości i terminów',
          'Gwarancja i serwis posprzedażowy'
        ],
        projects: ['Dostępne dla wszystkich typów projektów']
      }
    };

    serviceCTAs.forEach(cta => {
      cta.addEventListener('click', () => {
        const serviceId = cta.getAttribute('data-service');
        const service = serviceDetails[serviceId];
        
        if (!service) return;

        modalContent.innerHTML = `
          <div class="text-center mb-6">
            <h3 class="text-3xl font-bold text-neutral-800 mb-4">${service.title}</h3>
            <p class="text-neutral-600 text-lg leading-relaxed">${service.description}</p>
          </div>

          <div class="space-y-6">
            <div>
              <h4 class="text-xl font-semibold text-neutral-800 mb-4">Co oferujemy:</h4>
              <ul class="space-y-3">
                ${service.details.map(detail => `
                  <li class="flex items-start gap-3">
                    <div class="w-5 h-5 rounded-full bg-green-light/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                      <svg class="w-3 h-3 text-green" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                    <span class="text-neutral-700">${detail}</span>
                  </li>
                `).join('')}
              </ul>
            </div>

            <div>
              <h4 class="text-xl font-semibold text-neutral-800 mb-4">Przykładowe realizacje:</h4>
              <ul class="space-y-2">
                ${service.projects.map(project => `
                  <li class="flex items-center gap-2 text-neutral-600">
                    <svg class="w-4 h-4 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    ${project}
                  </li>
                `).join('')}
              </ul>
            </div>
          </div>

          <div class="flex gap-4 mt-8 pt-6 border-t border-neutral-200">
            <button id="closeServiceModal" class="flex-1 px-6 py-3 border-2 border-neutral-300 text-neutral-700 font-medium rounded-lg hover:border-primary-600 hover:text-primary-600 transition-colors">
              Zamknij
            </button>
            <a href="#kontakt" class="flex-1 px-6 py-3 bg-primary-800 text-white font-medium rounded-lg hover:bg-primary-900 transition-colors text-center">
              Poproś o wycenę
            </a>
          </div>
        `;

        modal.classList.remove('hidden');
        modal.classList.add('flex');

        // Close modal functionality
        const closeButton = modal.querySelector('#closeServiceModal');
        const closeModal = () => {
          modal.classList.add('hidden');
          modal.classList.remove('flex');
        };

        closeButton?.addEventListener('click', closeModal);
        modal.addEventListener('click', (e) => {
          if (e.target === modal) closeModal();
        });

        // Handle CTA links in modal
        modal.querySelectorAll('a[href="#kontakt"]').forEach(link => {
          link.addEventListener('click', closeModal);
        });
      });
    });
  }

  // Global close modal function for organic design
  window.closeServiceModal = function() {
    const modal = document.getElementById('serviceModal');
    if (modal) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
    }
  };

  // Initialize when DOM is ready
  function init() {
    initOrganicServicesAnimations();
    initServiceModal();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
</script>