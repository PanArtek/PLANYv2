---
import Button from '../ui/Button.astro';
---

<section class="hero-minimalist relative overflow-hidden min-h-screen flex items-center" id="home">
  <!-- Minimalist Background - 70% white space -->
  <div class="hero-background absolute inset-0 pointer-events-none">
    <!-- Pure white background for minimalism -->
    <div class="absolute inset-0 bg-white"></div>
    
    <!-- Subtle geometric accents - positioned strategically -->
    <div class="geometric-accent-group absolute bottom-24 right-10 sm:right-20 flex gap-4 opacity-80">
      <div class="accent-triangle w-6 h-6 geometric-triangle" style="background: var(--accent-orange);"></div>
      <div class="accent-circle w-5 h-5 rounded-full" style="background: var(--primary-medium);"></div>
      <div class="accent-square w-4 h-4 transform rotate-45" style="background: var(--primary-dark);"></div>
      <div class="accent-hexagon w-5 h-5 geometric-hexagon" style="background: var(--primary-light);"></div>
    </div>
    
    <!-- Logo geometric accent -->
    <div class="logo-accent absolute top-8 left-4 sm:left-8 w-2 h-2 rounded-full" style="background: var(--neutral-light);"></div>
  </div>

  <!-- Hero Content - Minimalist Typography -->
  <div class="container mx-auto px-5 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-3xl text-left">
      <!-- Clean, minimal logo -->
      <div class="hero-logo mb-16 flex items-center">
        <span class="text-2xl font-bold" style="color: var(--primary-dark);">PLANY</span>
        <div class="logo-accent-inline w-2 h-2 rounded-full ml-2" style="background: var(--neutral-light);"></div>
      </div>
      
      <!-- Main message - Extra clean with generous spacing -->
      <h1 class="hero-title mb-6" style="
        font-size: clamp(48px, 8vw, 72px);
        font-weight: 300;
        line-height: 1.1;
        color: var(--neutral-dark);
        letter-spacing: -0.02em;
        margin-bottom: 24px;
      ">
        Profesjonalne wykonawstwo<br>
        na każdym etapie
      </h1>
      
      <!-- Supporting text with extra line height -->
      <p class="hero-subtitle mb-12" style="
        font-size: 24px;
        font-weight: 400;
        line-height: 1.6;
        color: var(--neutral-light);
        margin-bottom: 48px;
        max-width: 500px;
      ">
        Własny zespół 20+ specjalistów<br>
        realizuje kompleksowe wykończenia
      </p>
      
      <!-- CTA with generous spacing -->
      <div class="hero-cta mb-16">
        <a href="#kontakt" class="btn-geometric btn-primary-geometric">
          Umów wizję lokalną
        </a>
      </div>
      
      <!-- Trust indicators - Minimalist style -->
      <div class="hero-trust flex gap-8 items-center" style="
        padding-top: 48px;
        border-top: 1px solid var(--neutral-light);
        max-width: 500px;
      ">
        <div class="trust-item">
          <div style="font-size: 20px; font-weight: 600; color: var(--primary-dark);">17</div>
          <div style="font-size: 14px; color: var(--neutral-light); opacity: 0.8;">lat doświadczenia</div>
        </div>
        <div class="trust-item">
          <div style="font-size: 20px; font-weight: 600; color: var(--primary-dark);">20+</div>
          <div style="font-size: 14px; color: var(--neutral-light); opacity: 0.8;">specjalistów</div>
        </div>
        <div class="trust-item">
          <div style="font-size: 20px; font-weight: 600; color: var(--primary-dark);">100-5000m²</div>
          <div style="font-size: 14px; color: var(--neutral-light); opacity: 0.8;">realizacje</div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Minimalist Hero with 70% white space */
  .hero-minimalist {
    position: relative;
    background: var(--white);
    min-height: 100vh;
    padding: 120px 0;
    display: flex;
    align-items: center;
  }

  /* Geometric accent animations - subtle for minimalism */
  .geometric-accent-group:hover .accent-triangle {
    transform: rotate(120deg);
    transition: transform 0.4s ease;
  }

  .geometric-accent-group:hover .accent-square {
    transform: rotate(90deg);
    transition: transform 0.4s ease;
  }

  .geometric-accent-group:hover .accent-circle {
    transform: scale(1.1);
    transition: transform 0.3s ease;
  }

  .geometric-accent-group:hover .accent-hexagon {
    transform: rotate(60deg);
    transition: transform 0.4s ease;
  }

  /* Minimalist typography adjustments */
  .hero-title {
    font-family: 'Inter', sans-serif;
  }

  .hero-subtitle {
    font-family: 'Inter', sans-serif;
  }

  /* Responsive adjustments for mobile */
  @media (max-width: 768px) {
    .hero-minimalist {
      padding: 80px 0;
      text-align: center;
    }
    
    .hero-title {
      font-size: 48px !important;
      margin-bottom: 32px !important;
    }
    
    .hero-subtitle {
      font-size: 20px !important;
      margin-bottom: 48px !important;
    }
    
    .geometric-accent-group {
      position: static !important;
      justify-content: center;
      margin-top: 48px;
      opacity: 0.6 !important;
    }
    
    .hero-trust {
      justify-content: center !important;
      gap: 24px !important;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .geometric-accent-group:hover .accent-triangle,
    .geometric-accent-group:hover .accent-square,
    .geometric-accent-group:hover .accent-circle,
    .geometric-accent-group:hover .accent-hexagon {
      transform: none;
      transition: none;
    }
  }
</style>

<script type="module">
  function initMinimalistHeroAnimations() {
    // Minimal animations for clean, professional appearance
    if (!window.gsap) return;

    const tl = gsap.timeline({ delay: 0.3 });

    // 1. Set initial states - very subtle
    gsap.set(['.hero-logo', '.hero-title', '.hero-subtitle', '.hero-cta', '.hero-trust', '.geometric-accent-group'], {
      autoAlpha: 0,
      y: 20, // Smaller movement for minimalism
      force3D: true
    });

    // 2. Subtle entrance sequence
    tl.to('.hero-logo', {
      duration: 0.4,
      autoAlpha: 1,
      y: 0,
      ease: 'power2.out',
      force3D: true
    })
    .to('.hero-title', {
      duration: 0.5,
      autoAlpha: 1,
      y: 0,
      ease: 'power2.out',
      force3D: true
    }, '-=0.2')
    .to('.hero-subtitle', {
      duration: 0.4,
      autoAlpha: 1,
      y: 0,
      ease: 'power2.out',
      force3D: true
    }, '-=0.2')
    .to('.hero-cta', {
      duration: 0.3,
      autoAlpha: 1,
      y: 0,
      ease: 'power2.out',
      force3D: true
    }, '-=0.1')
    .to('.hero-trust', {
      duration: 0.3,
      autoAlpha: 1,
      y: 0,
      ease: 'power2.out',
      force3D: true
    }, '-=0.1')
    .to('.geometric-accent-group', {
      duration: 0.3,
      autoAlpha: 1,
      y: 0,
      ease: 'power2.out',
      force3D: true
    }, '-=0.1');
    
    // 3. Smooth scroll for hero button
    const heroButton = document.querySelector('.hero-cta a[href^="#"]');
    if (heroButton) {
      heroButton.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = heroButton.getAttribute('href').substring(1);
        const targetElement = document.getElementById(targetId);
        
        if (targetElement) {
          const navbar = document.getElementById('navbar');
          const navHeight = navbar ? navbar.offsetHeight : 80;
          const targetPosition = targetElement.offsetTop - navHeight - 20;
          
          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth'
          });
        }
      });
    }
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMinimalistHeroAnimations);
  } else {
    initMinimalistHeroAnimations();
  }
</script>