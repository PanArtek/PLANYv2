---
export interface Props {
  name: string;
  size?: number | string;
  class?: string;
  strokeWidth?: number;
}

const {
  name,
  size = 24,
  class: className = '',
  strokeWidth = 2
} = Astro.props;

// Convert size to number if string
const iconSize = typeof size === 'string' ? parseInt(size) : size;

const classes = [
  'inline-block',
  className
].filter(Boolean).join(' ');
